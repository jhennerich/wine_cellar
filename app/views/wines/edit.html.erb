<%= form_with url: "/wines/#{@wine.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><p>
  <%= form.label :varietal%>
  <%= form.text_field :varietal %> <p>
  <%= form.label :quantity%>
  <%= form.number_field :quantity %><p>
  <%= form.label :year%>
  <%= form.number_field :year %><p>
  <%= form.label :wine_score%>
  <%= form.number_field :wine_score %><p>

  <%= form.label :in_stock, "In Stock True" %>
  <%= form.radio_button :in_stock, "true" %><p>
  <%= form.label :in_stock, "In Stock False" %>
  <%= form.radio_button :in_stock, "false" %><p>

  <%= form.submit 'Update Wine'  %>
<% end %>
